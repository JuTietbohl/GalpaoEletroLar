@model GalpaoEletroLar.Models.ViewModels.CatalogoViewModel

@{
    ViewData["Title"] = "Catálogo";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
</head>
<body>
<div class="text-center">
    <div style=" display: flex; justify-content: end; margin: 50px;">
        <button type="button" class="btn action-button" data-bs-toggle="modal" data-bs-target=" #modalCadastro" style="background-color: #744D2B;  color: #FFE1BA; font-size: 20px">  Cadastrar produto </button>
    </div>
    @await Html.PartialAsync("Product/ProductsList", Model.ListaProdutos)</div>

<div id="modalContainer"></div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="@Url.Content("~/js/openProductModal.js")"></script>
</body>

@await Html.PartialAsync("Modal/ModalDetalhes", Model.Produto)
@await Html.PartialAsync("Modal/_ModalCadastro", Model)


