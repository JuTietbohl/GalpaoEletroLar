@model GalpaoEletroLar.Models.CadastroProduto

@{
    ViewData["Title"] = "Catálogo";
}

<!-- Botão para abrir o modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Adicionar Produto
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Catalogo" asp-action="Index" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Novo Produto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>

                <div class="modal-body">

                    <div class="form-group mb-2">
                        <label asp-for="Nome">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span> @* Adicionado para validação *@
                    </div>

                    @*<div class="form-group mb-2">
                        <label asp-for="DataEntrada">Data de Entrada</label>
                        <input asp-for="DataEntrada" type="date" class="form-control" />
                        <span asp-validation-for="DataEntrada" class="text-danger"></span>
                    </div>*@

                    <div class="form-group mb-2">
                        <label asp-for="Custo">Custo</label>
                        <input asp-for="Custo" type="number" step="0.01" class="form-control" /> @* Tipo "number" para decimal com casas decimais *@
                        <span asp-validation-for="Custo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Preco">Preço de Venda</label> @* Rótulo ajustado para diferenciar de Custo *@
                        <input asp-for="Preco" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Quantidade">Quantidade</label>
                        <input asp-for="Quantidade" type="number" class="form-control" /> @* Tipo "number" para int *@
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-2"> @* Ajustado para um checkbox *@
                        <input asp-for="EmPromocao" type="checkbox" class="form-check-input" />
                        <label asp-for="EmPromocao" class="form-check-label">Em Promoção</label>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Tamanho">Tamanho</label>
                        <input asp-for="Tamanho" class="form-control" />
                        <span asp-validation-for="Tamanho" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Tipo">Tipo de Produto</label>
                        <select asp-for="Tipo" class="form-select" id="TipoProduto" onchange="toggleCamposEspecificos()">
                            <option value="">Selecione</option>
                            <option value="Eletro">Eletrodoméstico</option>
                            <option value="Movel">Móvel</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2" id="campoVoltagem" style="display:none;">
                        <label asp-for="Voltagem">Voltagem</label>
                        <input asp-for="Voltagem" type="number" class="form-control" />
                        <span asp-validation-for="Voltagem" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2" id="campoMaterial" style="display:none;">
                        <label asp-for="Material">Material</label>
                        <input asp-for="Material" class="form-control" />
                        <span asp-validation-for="Material" class="text-danger"></span>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>

        </div>
    </div>
</div>
