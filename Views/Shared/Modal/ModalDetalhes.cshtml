@model GalpaoEletroLar.Models.CadastroProduto

<form asp-action="AlterarProduto" asp-controller="Catalogo" method="post">
    <div class="modal fade" id="modalDetalhes" tabindex="-1" aria-labelledby="modalDetalhesLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header d-flex justify-content-center position-relative w-100 mb-4">
                    <h5 class="modal-title position-absolute top-50 start-50 translate-middle-x" id="exampleModalLabel">Detalhes do produto</h5>
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>

                <div class="modal-body row">
                
                    <input asp-for="Id" type="hidden" />

                    <div class="form-group mb-2">
                        <label asp-for="Tipo">Tipo de Produto:</label>
                        <select asp-for="Tipo" class="form-select" disabled>
                            <option value="">Selecione</option>
                            <option value="Eletro">Eletrodoméstico</option>
                            <option value="Movel">Móvel</option>
                        </select>
                    </div>

                    <div class="form-group mb-2 col-12">
                        <label asp-for="Nome">Nome:</label>
                        <input asp-for="Nome" class="form-control" disabled/>
                    </div>

                    <div class="form-group mb-2 col-lg-6">
                        <label asp-for="Custo">Custo:</label>
                        <input asp-for="Custo" type="number" step="0.01" class="form-control" disabled/>
                    </div>

                    <div class="form-group mb-2 col-lg-6">
                        <label asp-for="Preco">Preço de Venda:</label>
                        <input asp-for="Preco" type="number" step="0.01" class="form-control" disabled/>
                    </div>

                    <div class="form-group mb-2 col-lg-6">
                        <label asp-for="DataEntrada">Data de Entrada:</label>
                        <input asp-for="DataEntrada" type="date" class="form-control" disabled/>
                    </div>

                    <div class="form-group mb-2 col-lg-6">
                        <label asp-for="Quantidade">Quantidade:</label>
                        <input asp-for="Quantidade" type="number" class="form-control" disabled/>
                    </div>

                    <div class="form-group mb-2 col-12 d-none">
                        <label asp-for="Tamanho">Tamanho:</label>
                        <input asp-for="Tamanho" id="tamanhoInput" class="form-control" disabled/>
                    </div>

                    <div class="form-group mb-2 d-none">
                        <label asp-for="Voltagem">Voltagem:</label>
                        <select asp-for="Voltagem" class="form-select" id="voltagemSelect" disabled>
                            <option value="">Selecione</option>
                            <option value="V110">110v</option>
                            <option value="V220">220v</option>
                        </select>
                    </div>

                    <div class="modal-footer d-flex w-100 justify-content-center">
                        <button type="button" id="edit-button" class="btn btn-primary action-button submit-button w-100" onclick="habilitarEdicao()">Editar</button>

                        <button type="submit" id="save-button" class="btn btn-primary action-button submit-button w-100 d-none">Salvar</button>
                  
                    </div>
                </div>
            </div>
        </div>
    </div> 
</form>



