@model GalpaoEletroLar.Models.CadastroProduto

<div class="modal fade" id="modalCadastro" tabindex="-1" aria-labelledby="modalCadastroLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Catalogo" asp-action="Index" method="post">
                <div class="modal-header d-flex w-100">
                    <h5 class="modal-title text-center" id="exampleModalLabel">Cadastro</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>

                <div class="modal-body row">
                    
                    <div class="form-group mb-2">
                        <label asp-for="Tipo">Tipo de Produto</label>
                        <select asp-for="Tipo" class="form-select" id="TipoProduto" required>
                            <option value="">Selecione</option>
                            <option value="Eletro">Eletrodoméstico</option>
                            <option value="Movel">Móvel</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2 col-12">
                        <label asp-for="Nome">Nome</label>
                        <input asp-for="Nome" class="form-control" required/>
                        <span asp-validation-for="Nome" class="text-danger"></span> @* Adicionado para validação *@
                    </div>

                    <div class="form-group mb-2 col-lg-6">
                        <label asp-for="Custo">Custo</label>
                        <input asp-for="Custo" type="number" step="0.01" class="form-control" required/> @* Tipo "number" para decimal com casas decimais *@
                        <span asp-validation-for="Custo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2 col-lg-6">
                        <label asp-for="Preco">Preço de Venda</label> @* Rótulo ajustado para diferenciar de Custo *@
                        <input asp-for="Preco" type="number" step="0.01" class="form-control" required/>
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2 col-lg-6">
                        <label asp-for="DataEntrada">Data de Entrada</label>
                        <input asp-for="DataEntrada" type="date" class="form-control" required/>
                        <span asp-validation-for="DataEntrada" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2 col-lg-6">
                        <label asp-for="Quantidade">Quantidade</label>
                        <input asp-for="Quantidade" type="number" class="form-control" min="0" step="1" required/>
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>


                    <div class="form-group mb-2 col-lg-6">
                        <label asp-for="Tamanho">Tamanho</label>
                        <input asp-for="Tamanho" class="form-control" required/>
                        <span asp-validation-for="Tamanho" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2" id="campoVoltagem">
                        <label asp-for="Voltagem">Voltagem</label>
                        <select asp-for="Voltagem" class="form-select" id="TipoProduto">
                            <option value="">Selecione</option>
                            <option value="V110">110v</option>
                            <option value="V220">220v</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </form>

        </div>
    </div>
</div>