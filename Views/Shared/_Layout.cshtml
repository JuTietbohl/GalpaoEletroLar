<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Galpao EletroLar</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/png" href="/galpao_eletrolar_icon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"> 
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/GalpaoEletroLar.styles.css" asp-append-version="true"/>
</head>
<body style="background-color: #F0D3AE">
<header>
    <nav class="navbar" style="background-color: #744D2B;">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand d-flex align-items-center text-white h3" href="#">
                <img src="/galpao_eletrolar_icon.png" alt="Ícone" width="30" height="30" class="me-2" />
                Galpão EletroLar
            </a>
            <ul class="nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link text-white fw-semibold" style="font-size: 20px;"  href="#">Catálogo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white fw-semibold" style="font-size: 20px;" href="#">Produtos Vendidos</a>
                </li>
            </ul>
            <div style="width: 140px;"></div>

        </div>
    </nav>
</header>
<div style=" display: flex; justify-content: end; margin: 50px; padding: 10px;">
    <button type="button" class="btn" style="background-color: #744D2B;  color: #FFE1BA; font-size: 20px">  Cadastrar produto </button>
</div>
<div class="card p-4" style="background-color: #FAE5CA; border: none; margin: 40px; ">
    <div class="d-flex align-items-center justify-content-between">
        
        <div class="d-flex align-items-center">
            <i class="fa-regular fa-refrigerator" style="color: #744D2B; font-size: 20px;"></i>
            <div class="ms-3">
                <h6 class="mb-0 fw-semibold" style="color: #5C3B1E;">Geladeira Brastemp</h6>
                <small class="text-muted">Frost Free Duplex</small>
            </div>
        </div>
        <div class="fw-bold" style="color: #5C3B1E; font-size: 1.2rem;">
            R$ 1400,00
        </div>
        <div class="text-end">
            <div style="color: #5C3B1E;"> Quantidade: 2</div>
        </div>
        <div class="fw-bold" style="color: #5C3B1E; font-size: 1.2rem;">
            <div style="color: #5C3B1E;"> 22/07/2025</div>
        </div>
        <div>
            <button class="btn btn-sm" style="color: #5C3B1E; font-size: 20px">
                <i class="bi bi-currency-dollar"></i>
            </button>
            <button class="btn btn-sm" style="color: #5C3B1E; font-size: 20px">
                <i class="bi bi-pencil-square"></i>
            </button>
            <button class="btn btn-sm" style="color: #5C3B1E; font-size: 20px">
                <i class="bi bi-trash"></i>
            </button>
        </div>
    </div>
</div>
<div class="card p-4" style="background-color: #FAE5CA; border: none; margin: 40px; ">
    <div class="d-flex align-items-center justify-content-between">

        <div class="d-flex align-items-center">
            <i class="fa-regular fa-refrigerator" style="color: #744D2B; font-size: 20px;"></i>
            <div class="ms-3">
                <h6 class="mb-0 fw-semibold" style="color: #5C3B1E;">Geladeira Brastemp</h6>
                <small class="text-muted">Frost Free Duplex</small>
            </div>
        </div>
        <div class="fw-bold" style="color: #5C3B1E; font-size: 1.2rem;">
            R$ 1.000,00 
        </div>
        <div class="text-end">
            <div style="color: #E00000;">  Sem estoque </div>
        </div>
        <div class="fw-bold" style="color: #5C3B1E; font-size: 1.2rem;">
            <div style="color: #5C3B1E;"> 22/07/2025</div>
        </div>
        <div>
            <button class="btn btn-sm" style="color: #5C3B1E; font-size: 20px">
                <i class="bi bi-currency-dollar"></i>
            </button>
            <button class="btn btn-sm" style="color: #5C3B1E; font-size: 20px">
                <i class="bi bi-trash"></i>
            </button>
            <button class="btn btn-sm" style="color: #5C3B1E; font-size: 20px">
                <i class="bi bi-pencil-square"></i>
            </button>
        </div>
    </div>
</div>


<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - GalpaoEletroLar - <a asp-area="" asp-controller="Catalogo" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>